<%= form_for(@compra) do |f| %>
  <% if @compra.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@compra.errors.count, "error") %> prohibited this compra from being saved:</h2>

      <ul>
      <% @compra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :num_factura %><br>
    <%= f.text_field :num_factura %>
  </div>
  <div class="field">
    <%= f.label :fecha_ingreso %><br>
    <%= f.date_select :fecha_ingreso %>
  </div>
  <div class="field">
    <%= f.label :moneda %><br>
    <%= f.text_field :moneda %>
  </div>  
  <div class="field">
    <%= f.label :articulo_id %><br>    
    <%= f.collection_select :articulo_id, Articulo.where(user_id: current_user.id).order(:nombre), :id, :name_with_desc, 
        include_blank: false %>
  </div>    
  <div class="field">
    <%= f.label :cantidad %><br>
    <%= f.number_field :cantidad %>
  </div>
  <div class="field">
    <%= f.label :valor_unidad %><br>
    <%= f.number_field :valor_unidad, :default => 0, :step => 1  %>
  </div>
  <div class="field">
    <%= f.label :valor_venta %><br>
    <%= f.number_field :valor_venta, :default => 0%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
