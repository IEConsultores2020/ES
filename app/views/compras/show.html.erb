
<p>
  <strong>Tienda:</strong>
  <%= @compra.tienda_nombre %>
</p>

<p>
  <strong>Fecha ingreso:</strong>
  <%= @compra.fecha_ingreso %>
</p>

<p>
  <strong>Moneda:</strong>
  <%= @compra.moneda %>
</p>

<p>
  <strong>Articulo:</strong>
  <%= @compra.articulo_nombre %>
</p>
<p>
  <strong>Cantidad integer:</strong> 
  <%=  number_with_precision(@compra.cantidad , :precision => 2, :separator => ',', :delimiter => '.', :strip_insignificant_zeros => true) %>
</p>

<p>
  <strong>Valor unidad:</strong>
  <%= number_with_precision(@compra.valor_unidad, :precision => 0, :separator => ',', :delimiter => '.', :strip_insignificant_zeros => true) %>
</p>

<p>
  <strong>Valor venta:</strong>
  <%= number_with_precision(@compra.valor_venta, :precision => 0, :separator => ',', :delimiter => '.', :strip_insignificant_zeros => true) %>
</p>

<p>
  <strong>Valor total:</strong>
  <%= number_with_precision(@compra.valor_total, :precision => 2, :separator => ',', :delimiter => '.', :strip_insignificant_zeros => true) %>

</p>

<p>
  <strong>Vendedor:</strong>
  <%= @compra.user %>
</p>



<%= link_to 'Editar', edit_compra_path(@compra) %> |
<%= link_to 'Atras', compras_path %>
